<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Left Chat Layout -->
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_style"
        android:backgroundTint="@color/chat_color_sender"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="8dp">

        <!-- Left Reply Container -->
        <LinearLayout
            android:id="@+id/left_reply_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="4dp"
            android:background="@color/lightgray">

            <TextView
                android:id="@+id/left_reply_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender Name"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/left_reply_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply message"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Hala Madrid"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/left_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:textColor="@color/lightgray"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"/>
    </LinearLayout>

    <!-- Right Chat Layout -->
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_style"
        android:backgroundTint="@color/chat_color_receiver"
        android:padding="8dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="8dp">

        <!-- Right Reply Container -->
        <LinearLayout
            android:id="@+id/right_reply_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/lightgray"
            android:visibility="gone"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/right_reply_sender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sender Name"
                android:textColor="@color/teal_200"
                android:textSize="12sp"
                android:layout_marginBottom="2dp"/>

            <TextView
                android:id="@+id/right_reply_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reply message"
                android:textColor="@color/white"
                android:textSize="12sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/right_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Real Madrid:Barcelona 3:0"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/right_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:05 PM"
            android:textColor="@color/lightgray"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"/>
    </LinearLayout>

</RelativeLayout>