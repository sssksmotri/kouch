<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Left Chat Layout -->
    <LinearLayout
        android:id="@+id/left_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_style"
        android:backgroundTint="@color/chat_color_sender"
        android:padding="8dp"
        android:layout_marginEnd="80dp">

        <TextView
            android:id="@+id/left_chat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:text="Hala Madrid"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/left_chat_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM"
            android:textColor="@color/lightgray"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_gravity="end"/>

    </LinearLayout>

    <!-- Right Chat Layout -->
    <LinearLayout
        android:id="@+id/right_chat_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_style"
        android:backgroundTint="@color/chat_color_receiver"
        android:padding="8dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentEnd="true">
            <TextView
                android:id="@+id/right_chat_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:text="Real Madrid:Barcelona 3:0"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/right_chat_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:05"
                android:textColor="@color/lightgray"
                android:textSize="12sp"
                android:layout_gravity="end"/>
        </LinearLayout>
</RelativeLayout>
